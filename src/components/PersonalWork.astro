<style>

  .proj{
    display: flex;
    justify-content: center;
  }

  .projectCard{
    display: flex;
    flex-flow: wrap;
    justify-content: center;
    align-items: center;
    overflow: visible;
    width: 700px;
    height: 500px;
    margin: 0 auto;
    margin-bottom: 0px;
    background-image: url(src/content/personal/thumbnail.png);
    background-size: 100%;
    border: 10px solid rgba(255, 187, 0);
    border-radius: 30px;
    transition: all 0.2s;
  }

  .projectCard:hover{

    background-size: 105.5%;
  }

  .sectH{
  width: 600px;
  margin: 0 auto;
  display: flex;
  color: white;
  font-size: 60pt;
  font-optical-sizing: auto;
  font-weight: 900;
  font-style: italic;
  text-decoration: underline;
  text-underline-offset: 10px;
  }

  .click{
    align-content: center;
    justify-content: center;
    width: 700px;
    height: 480px;
    text-decoration: none;
  }

  .bottomCard{
    /* background-color: rgba(255, 187, 0); */
    margin-top: -10px;
    margin-left: 20px;
    margin-bottom: 50px;
    width: 700px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
  }

  .bottomCard h2{
    color: rgba(255, 187, 0);
    width: 700px;
    padding-left: 20px;
    padding-top: 5px;
  }
  .bottomCard a{ text-decoration: none; }
  .bottomCard p{
    color: rgba(255, 187, 0);
    width: 700px;
    padding-left: 20px;
    padding-bottom: 10px;
    margin-top: -8px;
  }

  @media(max-width: 900px){
    .projectCard, .click{
      width: 100vw;
      height: 60vw;
    }
    .click{
      height: 57vw;
    }
    .sectH{
      width: fit-content;
      font-size: 10vw;
    }
  }

</style>
